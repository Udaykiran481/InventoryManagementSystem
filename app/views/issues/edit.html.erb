<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h2 class="card-title">Resolve Issue</h2>
        </div>
        <div class="card-body">
          <%= form_with(model: @issue, local: true) do |form| %>
            <div class="form-group">
              <%= form.label :resolved, "Resolved" %>
              <%= form.check_box :resolved, class: "form-check-input" %>
            </div>

            <div class="form-group text-center">
              <%= form.submit "Resolve Issue", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="mt-3">
        <%= link_to "Back", issues_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
