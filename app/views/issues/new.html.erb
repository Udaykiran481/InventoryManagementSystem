<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h1 class="text-center mb-4">Report The Issue</h1>
      
      <%= form_with(model: @issue, local: true) do |form| %>
        <div class="form-group">
          <%= form.label :description, "Issue Description<span class='text-danger'>*</span>".html_safe %>
          <%= form.text_area :description, class: "form-control", rows: 4 %>
          <% if @issue.errors[:description].any? %>
            <div class="text-danger">
              <%= "Description " + @issue.errors[:description].join(", ") %>
            </div>
          <% end %>
        </div>
      
        <div class="form-group">
          <%= form.label :item_id, "Select Item<span class='text-danger'>*</span>".html_safe %>
          <%= form.collection_select :item_id, @employee_items, :id, :name, {}, class: "form-control" %>
          <% if @issue.errors[:item].any? %>
            <div class="text-danger">
              <%= "Item " + @issue.errors[:item].join(", ") %>
            </div>
          <% end %>
        </div>
      
        <div class="form-group" style="margin-top: 10px;">
          <%= form.submit "Create Issue", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>
            
      <%= link_to "Back to Issues", issues_path, class: "btn btn-secondary btn-block mt-3" %>
    </div>
  </div>
</div>


