<div class="image-container">
<%= image_tag('Inventory Home.jpg', alt: 'Inventory management login img', class: 'full-width-height-image') %>
</div>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card position-absolute" style="top: 50%; right: 0px; transform: translate(-50%, -50%);">
        <div class="card-body">
          <h2 class="card-title text-center mb-4">Login</h2>
          <%= form_with(url: login_path, method: :post) do |form| %>
            <div class="mb-3">
              <%= form.email_field :email, name: 'session[email]', placeholder: 'Email', class: 'form-control',required: true %>
            </div>
            <div class="mb-3">
              <%= form.password_field :password, name: 'session[password]', placeholder: 'Password', class: 'form-control' ,required: true%>
            </div>
            <div class="mb-3">
              <%= form.submit 'Login', class: 'btn btn-primary btn-block' %>  
            </div>
          <% end %>
          <hr> 
          <div class="text-center">
            <p>Don't have an account? <%= link_to "Sign Up", new_user_path %></p>
          </div>
          <div class="text-center mt-3">
            <p>or Log in with</p>
            <%= button_to 'Google', '/auth/google_oauth2', class: 'btn btn-outline-secondary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>





