<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title text-center">Send an Invitation</h2>
          
          <%= form_with model: @invitation, url: invitations_path, local: true do |form| %>
            <div class="form-group mb-3">
              <%= form.label :name, 'Employee Name' %>
              <%= form.text_field :name, class: 'form-control', required: true %>
            </div>
          
            <div class="form-group mb-3">
              <%= form.label :email, 'Employee Email' %>
              <%= form.email_field :email, class: 'form-control', required: true %>
            </div>
          
            <div class="actions">
              <%= form.submit 'Send Invitation', class: 'btn btn-primary' %>
            </div>
          <% end %>
          
          <div>
          <%= link_to 'Back to Employees', employees_path, class: 'btn btn-secondary mt-3' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
