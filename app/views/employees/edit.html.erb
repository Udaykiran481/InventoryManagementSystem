<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
            <h1 class="card-title">Edit Employee</h1>
          
            <%= form_with(model: @employee, local: true) do |form| %>
              <div class="mb-3">
                <%= form.label :name, "Name<span class='text-danger'>*</span>".html_safe, class: 'form-label' %>
                <%= form.text_field :name, class: 'form-control'%>
                <% if @employee.errors[:name].any? %>
                  <div class="text-danger">
                    <%= 'Employee name '+@employee.errors[:name].join(", ") %>
                  </div>
                <% end %>
              </div>
            
              <div class="mb-3">
                <%= form.label :email, "Email<span class='text-danger'>*</span>".html_safe, class: 'form-label' %>
                <%= form.email_field :email, class: 'form-control' %>
                <% if @employee.errors[:email].any? %>
                  <div class="text-danger">
                    <%= 'Employee email '+@employee.errors[:email].join(", ") %>
                  </div>
                <% end %>
              </div>
            
              <div class="mb-3">
                <%= form.label :status, "Status<span class='text-danger'>*</span>".html_safe, class: 'form-label' %>
                <%= form.select :status, { 'Active' => true, 'Inactive' => false }, {}, class: 'form-control'%>
                <% if @employee.errors[:status].any? %>
                  <div class="text-danger">
                    <%= @employee.errors[:status].join(", ") %>
                  </div>
                <% end %>
              </div>  
            
              <div class="mb-3 text-center">
                <%= form.submit 'Update Employee', class: 'btn btn-primary' %>
              </div>
            <% end %>
            <%= link_to 'Cancel', employees_path, class: 'btn btn-secondary mt-3' %>
        </div>
      </div>
    </div>
  </div>
</div>


