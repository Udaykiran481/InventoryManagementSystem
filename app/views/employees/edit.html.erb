<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
            <h1 class="card-title">Edit Employee</h1>
            <%= form_with(model: @employee, url: employee_path(@employee), method: :patch, local: true, html: { class: 'form' }) do |form| %>
              <div class="form-group mb-3">
                <%= form.label :name, "Name<span class='text-danger'>*</span>".html_safe %>
                <%= form.text_field :name, class: 'form-control', required: true %>
              </div>
            
              <div class="form-group mb-3">
                <%= form.label :email, "Email<span class='text-danger'>*</span>".html_safe %>
                <%= form.email_field :email, class: 'form-control', required: true %>
              </div>
            
              <div class="mb-3">
                <%= form.label :status, "Status<span class='text-danger'>*</span>".html_safe, class: 'form-label' %>
                <%= form.select :status, { 'Active' => true, 'Inactive' => false }, {}, class: 'form-control', required: true %>
              </div>
            
              <div class="form-group">
                <%= form.submit 'Update Employee', class: 'btn btn-primary' %>
              </div>
            <% end %>            
            <%= link_to 'Back to Employees', employees_path, class: 'btn btn-secondary mt-3' %>
        </div>
      </div>
    </div>
  </div>
</div>


