<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title text-center">Add Employee</h2>
          
          <%= form_with(model: @employee, local: true) do |form| %>
            <div class="mb-3">
              <%= form.label :name, class: 'form-label' %>
              <%= form.text_field :name, class: 'form-control', required: true %>
            </div>

            <div class="mb-3">
              <%= form.label :email, class: 'form-label' %>
              <%= form.email_field :email, class: 'form-control', required: true %>
            </div>

            <div class="mb-3">
              <%= form.label :status, class: 'form-label' %>
              <%= form.select :status, Employee::STATUSES.keys, {}, class: 'form-control', required: true %>
            </div>

            <div class="mb-3 text-center">
              <%= form.submit 'Add Employee', class: 'btn btn-primary' %>
            </div>
          <% end %>
          
          <div>
          <%= link_to 'Back to Employees', employees_path, class: 'btn btn-secondary mt-3' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
