<div class="container">
  <h1 class="mt-5">Brands</h1>
 
  <div class="d-flex justify-content-between align-items-center">
    <%= link_to 'New Brand', new_brand_path, class: 'btn btn-success mt-3' %>
    <%= form_with(url: brands_path, method: 'get', class: 'mt-3') do |form| %>
      <div class="input-group">
        <%= form.text_field :search, class: 'form-control search-padding', placeholder: 'Search by brand name' %>
        <div class="input-group-append ">
          <%= form.submit 'Search', class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
    </div>
  <% if @brands.any? %>
    <table class="table table-striped mt-3">
      <thead>
        <tr>
          <th>Name</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @brands.each do |brand| %>
          <tr>
            <td><%= brand.name %></td>
            <td>
            <%= link_to 'Edit', edit_brand_path(brand), class: 'btn btn-primary btn-sm' %>
            <%= link_to 'Delete', brand, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
  <p class="alert alert-danger text-center mt-3">No brands found.</p>
<% end %>

</div>



