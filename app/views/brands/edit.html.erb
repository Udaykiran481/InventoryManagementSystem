<div class="container mt-4">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-body">
          <h1 class="card-title">Edit Brand</h1>

          <%= form_with(model: @brand, url: brand_path(@brand), method: :patch, local: true, html: { class: 'form' }) do |form| %>
            <div class="mb-3">
              <%= form.label :name, class: 'form-label' do %>
                <%= 'Name' %>
                <span class="text-danger">*</span>
              <% end %>
              <%= form.text_field :name, class: 'form-control', required: true %>
            </div>

            <div class="text-center">
              <%= form.submit 'Update Brand', class: 'btn btn-primary' %>
            </div>
          <% end %>

          <%= link_to 'Cancel', brands_path, class: 'btn btn-secondary mt-3' %>
        </div>
      </div>
    </div>
  </div>
</div>

