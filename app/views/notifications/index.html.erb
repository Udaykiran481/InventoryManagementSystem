<div class="container mt-5">
  <h1 class="mb-4">Notifications</h1>
  <ul class="list-group">
    <% if @user_notifications.present? %>
      <% @user_notifications.each do |notification| %>
        <li class="list-group-item">
          <div class="row">
            <div class="col-8">
              <% if notification.issue_id.present? %>
                <span class="badge text-dark bg-info">
                  Issue
                </span>
              <% else %>
                <span class="badge text-dark bg-<%= notification.priority_class %>">
                  Buffer
                </span>
              <% end %>
              <%= link_to notification.message, notification_path(notification) %>
            </div>
            <div class="col-4 text-right">
              <small><%= notification.created_at.strftime("%B %d, %Y %I:%M %p") %></small>
            </div>
          </div>
        </li>
      <% end %>
    <% else %>
      <p class='alert alert-info text-center mt-3'>Hey user, currently there are no notifications.</p>
    <% end %>
  </ul>
  <%= link_to 'Back to Notifications', notifications_path, class: 'btn btn-secondary mt-3' %>
</div>







