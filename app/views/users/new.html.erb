<div class="image-container">
<%= image_tag('Inventory Home.jpg', alt: 'Inventory management login img', class: 'full-width-height-image') %>
</div>
<div class="container-fluid ">
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card  position-absolute" style="top: 50%; right:0px; transform: translate(-50%, -50%);">
          <div class="card-body">
            <% if flash[:success] %>
              <div class="alert alert-success">
                <%= flash[:success] %>
              </div>
            <% end %>

            <% if flash[:error] %>
              <div class="alert alert-danger">
                <%= flash[:error] %>
              </div>
            <% end %>
            <h2 class="card-title text-center mb-4">Sign Up</h2>
            <%= form_with(model: @user, local: true) do |form| %>
              <div class="mb-3">
                <%= form.text_field :name, placeholder: "*Name" ,class: 'form-control', required: true %>
              </div>

              <div class="mb-3">
                <%= form.email_field :email, placeholder: "*email", class: 'form-control', required: true %>
              </div>

              <div class="mb-3">
                <%= form.password_field :password, placeholder: "*Create Password",class: 'form-control', required: true %>
              </div>

              <div class="mb-3">
                <%= form.password_field :password_confirmation, placeholder: "*Confirm Password" ,class: 'form-control', required: true %>
              </div>
              <div class="mb-3">
                <%= form.submit "Sign Up", class: 'btn btn-primary btn-block' %>
              </div> 
              <hr> 
              <div class="text-center">
                <p>Already have an account?  <%= link_to "Sign In", login_path %></p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
