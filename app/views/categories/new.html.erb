<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6 ">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title text-center">Add a New Category</h2>
          <%= form_with(model: @category, local: true) do |form| %>
            <div class="mb-3">
              <%= form.label :name, class: 'form-label' %>
              <%= form.text_field :name, class: 'form-control',required: true %>
            </div>

            <div class="mb-3">
            <%= form.label :quantity, class:'form-label' %>
            <%= form.number_field :quantity, class: 'form-control',required: true %>
            </div>

            <div class="mb-3">
            <%= form.label :buffer_quantity, class:'form-label' %>
            <%= form.number_field :buffer_quantity, class: 'form-control',required: true %>
            </div>

            <div class="mb-3 text-center">
              <%= form.submit 'Create Category', class: ' btn btn-primary' %>
            </div>
            <%= link_to 'Back Category', categories_path, class: 'btn btn-secondary mt-3' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

